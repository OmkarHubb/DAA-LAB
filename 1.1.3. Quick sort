#include <stdio.h>

void swap(int* a, int* b) {
	int t = *a;
	*a = *b;
	*b = t;
}

void printArray(int arr[], int size) {
	for (int i=0; i < size; i++){
		printf("%d ", arr[i]);
	}
	printf("\n");
}

void printSubArray(int arr[], int low, int high){
	for (int i=low; i<=high;i++){
		printf("%d ", arr[i]);
	}
	printf("\n");
}

int partition(int arr[], int low, int high , int fullSize){
	int pivot = arr[high];
	int i = (low - 1);

	for (int j = low; j<=high - 1; j++){
		if(arr[j] < pivot) {
			i++;
			swap(&arr[i], &arr[j]);
		}
	}

	swap(&arr[i + 1], &arr[high]);

	printf("Pass: ");
	printSubArray(arr, low, high);

	return (i+1);
}

void quickSort(int arr[], int low, int high, int fullSize) {
	if (low < high){
		int pi = partition(arr, low, high, fullSize);
		quickSort(arr, low, pi - 1, fullSize);
		quickSort(arr, pi + 1, high, fullSize);
	}
}

int main(){
	int arr[100];
	int n;

	printf("number of elements: ");
	scanf("%d", &n);

	printf("elements: ");
	for(int i = 0; i < n; i++){
		scanf("%d", &arr[i]);
	}

	printf("Original array: ");
	printArray(arr,n);

	quickSort(arr, 0, n-1, n);
	printf("Sorted array: ");
	printArray(arr, n);

	return 0;
}
