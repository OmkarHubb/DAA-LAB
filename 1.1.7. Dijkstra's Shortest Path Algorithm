#include <limits.h> 
#include <stdio.h>
#define MAX 20
int V, E;
int graph[MAX][MAX];
#define INFINITY 99999

void dijkstra(int G[MAX][MAX], int n, int startnode) {
	
	int cost[MAX][MAX], distance[MAX], parent[MAX];
	int visited[MAX], count, min_distance, next_node, i, j;

	for(i = 1; i <= n; i++){
		for(j=1; j <=n; j++){
			if(G[i][j] == 0 && i != j)
				cost[i][j] = INFINITY;
			else cost[i][j] = G[i][j];
		}
	}
	
	for(i = 1; i <= n; i++){
		distance[i] = INFINITY;
		parent[i] = 0;
		visited[i]= 0;
	}
	distance[startnode] = 0;

	for(count = 1; count <= n; count++){
		min_distance = INFINITY;
		next_node = 0;

		for(i=1;i<=n;i++){
			if(!visited[i] && distance[i] < min_distance){
				min_distance = distance[i];
				next_node = i;
			}
		}

		if(next_node == 0 || min_distance == INFINITY){
			break;
		}

		visited[next_node] = 1;

		for(i=1;i<=n;i++){
			if(!visited[i] && cost[next_node][i] != INFINITY && distance[next_node] + cost[next_node][i] < distance[i]){
				distance[i] = distance[next_node] + cost[next_node][i];
				parent[i] = next_node;
			}
		}
	}

	printf("Node\tDistance\tPath\n");
	for(i=1; i <= n ;i++){
		if(i != startnode){
			printf("   %d\t", i);
			if(distance[i] >= INFINITY){
				printf("     INF\tNO PATH\n");
			}else {
				printf("       %d\t", distance[i]);
				printf("%d", i);
				j=i;
				do{
					j = parent[j];
					if(j != 0) {
						printf("<-%d", j);
					}
				}while (j != startnode && j!= 0);
				printf("\n");
			}
		}
	}
	
}
int main() { 
	int s, d, w, i, j;
	printf("Enter the number of vertices : ");
	scanf("%d", &V);
	printf("Enter the number of edges : ");
	scanf("%d", &E);
	for(i = 1 ; i <= V; i++) {
		for(j = 1; j <= V; j++) {
			graph[i][i] = 0;
		}
	}
	for(i = 1; i <= E; i++) {
		printf("Enter source : ");
		scanf("%d", &s);
		printf("Enter destination : ");
		scanf("%d", &d);
		printf("Enter weight : ");
		scanf("%d", &w);
		if(s > V || d > V || s <= 0 || d <= 0) {
			printf("Invalid index. Try again.\n");
			i--;
			continue;
		} else {
			graph[s][d] = w;
		}
	}
	printf("Enter the source :");
	scanf("%d", &s);
	dijkstra(graph, V, s); 
	return 0; 
} 
